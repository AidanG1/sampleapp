{% from 'django/forms/inputgroup.jinja' import inputgroup %}
{% extends "base.jinja" %}
{% block head_title %}
    {% trans %}
    Change Password
{% endtrans %}
{% endblock head_title %}
{% block content %}
    <h1>
        {% if token_fail %}
            {% trans %}
            Bad Token
        {% endtrans %}
    {% else %}
        {% trans %}
        Change Password
    {% endtrans %}
{% endif %}
</h1>
{% if token_fail %}
    {{ url('account_reset_password') }}
    <p>
        {% trans %}
        The password reset link was invalid, possibly because it has already been used.  Please request a <a href="{{ passwd_reset_url }}">new password reset</a>.
    {% endtrans %}
</p>
{% else %}
<form method="post" action="{{ action_url }}">
    {% csrf_token %}
    {{ inputgroup(form) }}
    <input type="submit"
           name="action"
           value=" {% trans %} change password {% endtrans %}"/>
</form>
{% endif %}
{% endblock content %}
