{% extends "base.jinja" %}
{% block head_title %}
    {% trans %}
    Sign Out
{% endtrans %}
{% endblock head_title %}
{% block content %}
    {% trans %}
    <h1>Sign Out</h1>
    <p>
        Are you sure you want to sign out?
    </p>
{% endtrans %}
<form method="post" action="{{ url('account_logout') }}">
    {% csrf_token %}
    {% if redirect_field_value %}
        <input type="hidden"
               name="{{ redirect_field_name }}"
               value="{{ redirect_field_value }}"/>
    {% endif %}
    <button type="submit">
        {% trans %}
        Sign Out
    {% endtrans %}
</button>
</form>
{% endblock content %}
