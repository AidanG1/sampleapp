{% from 'account/components/account_box.jinja' import account_box %}
{% from 'django/forms/inputgroup.jinja' import inputgroup %}
{% extends "base.jinja" %}
{% block head_title %}
    {% trans %}
    Set Password
{% endtrans %}
{% endblock head_title %}
{% block content %}
    {% set title="Set Password" %}
    {% set content %}
    <form method="post"
          action="{{ url('account_set_password') }}"
          class="password_set">
        {% csrf_token %}
        {{ form.as_p }}
        <input type="submit"
               name="action"
               value="{% trans %} Set Password {% endtrans %}"/>
    </form>
{% endset %}
{{ account_box(title, content, back='') }}
{% endblock content %}
