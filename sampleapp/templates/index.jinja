{% extends "base.jinja" %}
{% block title %}
    Lightmatter Base Install
{% endblock title %}
{% block content %}
    <div class="container mx-auto">
        {% set greeting='Hello There!' %}
        {% set greeting_styled %}
        <em>{{ greeting }}</em>
    {% endset %}
    <h1>{{ greeting_styled }}</h1>
    <div id="current-time">
        {% include 'current_time.jinja' %}
    </div>
    <button type="button"
            class="bg-white border border-black px-4 py-2"
            class="w"
            hx-push-url="false"
            hx-get="/current-time/"
            hx-target="#current-time"
            hx-swap='innerHTML'
            >
        Refresh time
    </button>
    <template slot="header">
        <h1>Panel Header</h1>
    </template>
</div>
{% endblock content %}
